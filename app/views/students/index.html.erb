
<div class="col-lg-12">
	
<h1>Listing Students</h1>
<%= link_to "New", new_student_path%>
<body>
	<div class="container">
		<table class="table table-bordered">
			<thead>
				<tr class="table-dark">
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Date of birth</th>
				<th>Permanent contact number</th>
				<th>Alternate contact number</th>
				<th>Permanent address</th>
				<th>Local address</th>
				<th>Contact</th>
				<th colspan="3">Actions</th>
			</tr>
			</thead>
			<tbody class="table-dark table-striped-columns">
				<% @students.each do |student|%>
					<tr>
						<td>
						<%= student.first_name %>
						</td>
						<td>
						<%= student.last_name %>
						</td>
						<td>
						<%= student.email %>
						</td>
						<td>
						<%= student.date_of_birth %>
						</td>
						<td>
						<%= student.permanent_contact_number %>
						</td>
						<td>
						<%= student.alternate_contact_number %>
						</td>
						<td>
						<%= student.permanent_address %>
						</td>
						<td>
						<%= student.local_address %>
						</td>						
						<td>
						<%= link_to "View",student %>
						</td> 
						<td>
						<%= link_to "Edit", edit_student_path(student.id) %>
						</td>
						<td>
						<%= button_to 'Delete', student_path(student), method: :delete, data: {confirm: 'Are you sure?'} %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</body>
</div>